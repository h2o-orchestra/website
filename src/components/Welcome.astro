---
interface Props {
  currentSeason: string;
}

const { currentSeason } = Astro.props;
---

<section class="relative py-16 md:py-24">
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute inset-0 bg-[url('/abstract_orchestra.png')] bg-cover bg-opacity-5"></div>
    <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl" aria-hidden="true">
      <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 bg-gradient-to-tr from-pumpkin-200 to-pumpkin-600 opacity-20"></div>
    </div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">Orchestre H²O</h1>
      <p class="text-xl md:text-2xl text-pumpkin-100 mb-8">Bienvenue à l'Orchestre d'Harmonie H²O, une formation musicale Toulousaine passionnée par l'excellence et le partage.</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/orchestre" class="inline-block bg-white text-pumpkin-600 font-medium py-3 px-6 rounded-lg shadow-md hover:bg-pumpkin-50 transition-colors">
          Découvrir l'orchestre
        </a>
        <a href={`saison/${currentSeason}`} class="inline-block text-white border border-white py-3 px-6 rounded-lg bg-white/10 hover:bg-white/20 transition-colors">
          Voir nos concerts
        </a>
      </div>
    </div>
  </div>
</section>
