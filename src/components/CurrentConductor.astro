---
import {type Chef} from "../lib/contentful";
interface Props {
    name: string
    resume: string
    portrait: string | undefined
}

const {name, resume, portrait} = Astro.props
---

<div class="bg-white p-6 md:p-8 rounded-2xl shadow-md h-full flex flex-col">
    <h2 class="text-2xl font-semibold text-h2o-dark mb-4">Direction Musicale</h2>
    <div class="flex flex-col md:flex-row gap-6 flex-grow">
        <div class="md:w-1/3 flex-shrink-0">
            {portrait && (
                <img 
                    src={portrait} 
                    alt={`${name} - Direction musicale`} 
                    class="w-full h-auto rounded-lg object-cover aspect-[3/4] shadow-sm"
                />
            )}
        </div>
        <div class="md:w-2/3">
            <h3 class="text-xl font-medium text-pumpkin-600 mb-2">{name}</h3>
            <div class="prose prose-sm md:prose-base text-gray-600 max-w-none" set:html={resume}></div>
        </div>
    </div>
    <div class="flex justify-end">
        <a href="/direction/current" class="inline-block mt-4 text-pumpkin-500 hover:underline font-medium">
            En savoir plus
            <span aria-hidden="true">&nbsp;â†’</span>
        </a>
    </div>
</div>